{% extends 'layout.html.twig' %}

{% block content %}
    {% include 'Blocks/_carousel.html.twig' %}

    <h1 class = 'programming-title'>Nos prochains Evènements</h1>

    <form class="form-inline my-2 my-lg-0" method="post" action="/programming/search">
        <input class="mr-sm-2 bar-search" type="search" placeholder="search" aria-label="search" name="search">

        <div class="index-dropdown-list">
            {% include 'Blocks/_adminDropdownList.html.twig' %}
            <button type="submit" class="btn btn-light">Search</button>
        </div>
    </form>

    <div class="row programming-section">
    {% for event in events %}
        <div class="card mb-3 col-4 programming-card" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ event.image }}" class="card-img img-max-height" alt="...">
                    <a href="../detail/event/{{ event.id }}"><button class="btn btn-secondary btn-lg mb-2">Détails</button></a>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title home-title">{{ event.title }}</h5>
                        <div class="card-overflow">
                            <p class="card-text">{{ event.description }}</p>
                        </div>
                        <p class="card-text"><small class="text-muted"></small></p>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
