<div id="programming-title" class="index-title">
  <h1>Programmation :</h1>
</div>
<div id="block-search" class="container">
  <div class="row">
    <form id="search" class="input-group" method="post">
        <input id="search-input" class="bar-search" type="search" placeholder="Rechercher un artiste, un spectacle, ..." aria-label="search" name="search">
        <span class="transition">Ou</span>
        <div class="index-dropdown-list">
            <select id="search-select" name="category" >
              <option value="0">Categories</option>
              {% for category in categories %}
                  <option value="{{ category.id }}">{{ category.category }}</option>
              {% endfor %}
            </select>
        </div>
        <button id="search-button" type="submit" class="btn btn-outline-orange">Chercher</button>
    </form>
  </div>
</div>
