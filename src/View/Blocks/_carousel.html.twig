<div id="carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
  <div class="carousel-inner">
    {% for key, carousel in carousels %}
      {% if key == 0 %}
        <div class="carousel-item active">
          <img src="{{ carousel.picture }}" class="d-block carousel-picture" alt="{{carousel.title}}">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="carousel-title">{{carousel.title}}</h5>
            <p>Le {{carousel.date_time|date("d/m/Y")}}</p>
            <a href="../show/event/{{carousel.id}}" class="btn btn-outline-orange">Détails</a>
          </div>
        </div>
      {% else %}
        <div class="carousel-item">
          <img src="{{ carousel.picture }}" class="d-block carousel-picture" alt="{{carousel.title}}">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="carousel-title">{{carousel.title}}</h5>
            <p>Le {{carousel.date_time|date("d/m/Y")}}</p>
            <a href="../show/event/{{carousel.id}}" class="btn btn-outline-orange">Détails</a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden"></span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden"></span>
  </a>
</div>
<div id="anchor"></div>
